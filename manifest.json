{
  "manifest_version": 3,
  "name": "MicrosoftDocsLanguageChanger",
  "version": "1.2",

  "description": "Changes microsoft docs language to english",

  "icons": {
    "48": "icons/changer.svg",
    "96": "icons/changer.svg"
  },
  
  "permissions": [
    "declarativeNetRequest",
    "activeTab"
  ],
  
  "host_permissions": [
    "*://learn.microsoft.com/*-*/*"
  ],

  "declarative_net_request": {
    "rule_resources": [   {
      "id": "ruleset_1",
      "enabled": true,
      "path": "rules.json"
    }]
  }
}